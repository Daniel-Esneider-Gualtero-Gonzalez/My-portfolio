---
import Navbar from "../components/Navbar.astro";
import Footer from '../components/Footer.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio web Daneil Esneider Gualtero Gonzalez donde expongo, mis proyecto, 
		experiencias ยก Y por supuesto para conseguir trabajo !" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="color-scheme" content="light dark">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap");
	/* Reset general */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	p {
		text-wrap: pretty;
	}
	

	/* Estilos para elementos de bloque */
	body {
		line-height: 1.5;
	}

	/* Estilos para listas */
	ul,
	ol {
		list-style: none;
	}

	/* Estilos para enlaces */
	a {
		text-decoration: none;
		color: inherit;
		cursor: pointer;
	}

	button{
		cursor: pointer;
	}

	

	

	body {
		font-family: "Onest", Serif, Sans-serif, Monospace;
		padding: 1rem;
		overflow-x: hidden;
		
	}

	body section {
		margin-bottom: 10rem;
	}

	@media (prefers-reduced-motion: reduce) {
		* {
			animation: none !important;
			transition: none !important;
		}
	}
	
		

	@media (prefers-color-scheme: dark) {
		body {
			color: white;
			background-image: conic-gradient(
				at right center,
				rgb(55, 65, 81),
				rgb(17, 24, 39),
				rgb(0, 0, 0)
			);
		}
	}

	@media (min-width: 640px) {
		body {
			padding: 2rem;
		}
	}
	@media (min-width: 768px) {
		body {
			padding: 2rem;
		}
	}

	@media (min-width: 1024px) {
		body {
			padding: 0 10rem;
		}
	}
</style>
