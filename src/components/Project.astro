---
import Tecnologi from "./Tecnologi.astro";
import LinkProject from "./LinkProject.astro";
interface Props {
    name: string;
    description: string;
    image: string;
    tecnologies: string[];
    links_project: Object;
}

const { name, description, image, tecnologies, links_project } = Astro.props;
---

<article id="project">
    <header>
        <h3>{name}</h3>
        <p>
            {description}
        </p>
    </header>

    <div>
        <article>
            {
                tecnologies &&
                    tecnologies.map((tecnologi) => {
                        return <Tecnologi tecnologi={tecnologi} />;
                    })
            }
        </article>
        <article>
            <ul>
                {
                    links_project &&
                        Object.entries(links_project).map((link) => {
                            const [name, href] = link;
                            return (
                                <li>
                                    <LinkProject name={name} href={href} />
                                </li>
                            );
                        })
                }
            </ul>
        </article>
    </div>
    <footer>
        <img src={image} alt=`imagen del proyecto ${name}` />
    </footer>
</article>

<style>
    #project {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        padding: 0.5rem;
        gap: 0.9rem;
        border-radius: 8px;
        box-shadow: 0 2px 4px rgba(0, 153, 255, 0.1);
        transition: transform 0.3s ease-in-out;
        grid-column: span 1;
    }

    header {
        flex: 1;
    }

    img {
        border-radius: 5px;
        min-width: 100%;
        max-width: 100%;
        height: 300px;
    }

    #project:hover {
        transform: scale(1.01);
    }

    div {
        display: flex;
        padding: 0.1rem;
        flex-direction: column;
        gap: 0.5em;
    }

    div article,ul {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    @media (prefers-color-scheme: dark;) {
        #project {
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
        }
    }
    @media (min-width: 1030px) {
        div {
            flex-direction: row;
            justify-content: space-between;
            gap: 0;
        }
    }
</style>
