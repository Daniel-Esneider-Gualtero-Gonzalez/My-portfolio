---
import { habilidades } from "../../../cv.json";
import Tecnologi from "../Tecnologi.astro";
---

<h2 class="titleTecnologias" id="mistecnologias">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M7 8l-4 4l4 4"></path><path d="M17 8l4 4l-4 4"></path><path
            d="M14 4l-4 16"></path></svg
    >
    Tecnologias
</h2>
<section id="tecnologies">
    {
        
        habilidades.map((habilidad) => {
            return (
                <Tecnologi
                    isSmall={false}
                    tecnologi={habilidad.toLocaleLowerCase()}
                />
            );
        })
    }
</section>
<style>
    section {
        
        padding: 1rem;
        display: flex;
        gap: 0.4rem;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        height: 240px;
    }

    
</style>
