<style>
    section {
        width: 100vw;
        margin-top: 10rem;
        display: flex;
        align-items: center;
    }
    section header {
        display: flex;
        flex-direction: column;
        gap: 0.5em;
    }
    section svg {
        width: 23px;
        height: 23px;
    }

    .me {
        width: 40px;
        border-radius: 1rem;
        box-shadow: 0px 4px 6px rgba(0, 153, 255, 0.3);
    }
    .meXl {
        width: 180px;
        height: 90%;
        margin: auto;
        border-radius: 1rem;
        display: none;
        box-shadow: 0px 4px 6px rgba(0, 153, 255, 0.2);
    }

    span {
        display: block;
    }

    p {
        max-width: 350px;
        line-height: 1.6;
        font-size: 20px;
    }

    ul {
        display: flex;
        flex-wrap: wrap;
        max-width: 80%;
    }

    ul a {
        font-size: 14px;
        background-color: rgba(0, 153, 255, 0.4);
        display: flex;
        align-items: center;
        margin-inline-end: 0.5rem;
        margin-bottom: 0.5rem;
        border-radius: 5px;
        border: 1px solid rgba(0, 153, 255, 0);
        padding: 0.3rem;
        transition: transform 150ms ease-in-out;
    }

    ul a:hover {
        background-color: transparent;
        border: 1px solid rgba(0, 153, 255, 0.4);
        transform: scale(1.05);
    }

    @media (min-width: 768px) {
        
        .meSm {
            display: none;
        }
    }

    @media (prefers-color-scheme: dark) {
        ul a {
            background-color: transparent;
            color: wheat;
            background-color: rgba(0, 153, 255, 0.2);
        }
    }
</style>
