---
interface Props {
    name: string;
    href: string;
}

const { name, href } = Astro.props;
---

{
    name === "page" && (
        <a href={href} target="_blank" title="Ver pagina del proyecto">
            <div />
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-external-link"
            >
                <>
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                    <polyline points="15 3 21 3 21 9" />
                    <line x1="10" y1="14" x2="21" y2="3" />
                </>
            </svg>
            Visitar
        </a>
    )
}
{
    name === "code" && (
        <a href={href} target="_blank" title="Ver repositorio en GitHub">
            <div /> 
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
