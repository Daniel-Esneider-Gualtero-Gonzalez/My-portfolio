---
import {informacion_personal} from '../../cv.json'

const {nombre} = informacion_personal
---

<footer>
    <span>Portafolio {nombre}. </span>
</footer>

<style>
    footer {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0.5em 1rem;
        font-size: 0.9rem; 
        box-shadow: 0 2px 4px rgba(0, 153, 255, 0.3);
        
    }
    span{
        border-bottom: 1px rgba(0, 153, 255, 0.8) solid;
    }
    
    

   
    @media (prefers-color-scheme: dark) {
        footer{
            color: wheat;
            box-shadow: 0px 4px 6px rgba(0, 153, 255, 0.1) ;
        }
        footer a {
            background-color: transparent;
            color: wheat;
            background-color: rgba(0, 153, 255, 0.2);
        }
    }
</style>
