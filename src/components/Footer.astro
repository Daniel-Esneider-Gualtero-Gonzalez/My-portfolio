---
import {informacion_personal} from '../../cv.json'

const {nombre} = informacion_personal
---

<footer>
    <span>&copy; 2024 {nombre}. Todos los derechos reservados.</span>
    <a href="../../Cv-example.pdf" download="Cv-Daniel-Esneider-Gualtero-Gonzalez.pdf"
        ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-download"
            ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
            ></path><polyline points="7 10 12 15 17 10"></polyline><line
                x1="12"
                y1="15"
                x2="12"
                y2="3"></line></svg
        >Descargar Cv</a
    >
</footer>

<style>
    footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5em 1rem;
        font-size: 0.9rem; 
        box-shadow: 0 2px 4px rgba(0, 153, 255, 0.3);
        
    }
    footer a svg{
        margin-right: 0.5rem;
    }
    footer a {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 153, 255, 0.4);
        border-radius: 5px;
        padding: 0.6rem;
        border: 1px solid rgba(0, 153, 255, 0.0);
        transition: transform 150ms ease-in-out;
    }

    footer a:hover {
        background-color: transparent;
        border: 1px solid rgba(0, 153, 255, 0.4);
        transform: scale(1.05);
    }

    @media (prefers-color-scheme: dark) {
        footer{
            color: wheat;
            box-shadow: 0px 4px 6px rgba(0, 153, 255, 0.1) ;
        }
        footer a {
            background-color: transparent;
            color: wheat;
            background-color: rgba(0, 153, 255, 0.2);
        }
    }
</style>
