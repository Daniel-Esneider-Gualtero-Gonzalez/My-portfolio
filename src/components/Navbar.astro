---
import ChangeTheme from '../components/ChangeTheme.astro'
---

<header>
    <ul>
        <a class="" href="#misproyectos">Proyectos</a>
        <a href="#acercademi">Acerca de mi</a>
        <a href="#experiencia">Experiencia</a>
        <a href="#mistecnologias">Tecnologias</a>
    </ul>
    <ChangeTheme />
</header>

<style>
    header {
        position: absolute;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.2rem;
        font-size: 0.90rem;
        
        top: 0;
        left: 0;
        right: 0;
        
    }
    header ul{
        display: flex;
        flex-wrap: wrap;
        /* border-bottom: 1px solid brown; */
   
    }

    header ul a {
        justify-content: center;
        align-items: center;
        margin: 0 0.7rem;
        background-color: rgba(0, 153, 255, 0.4);
        margin-bottom: 10px;
        border-radius: 5px;
        padding: 0.3em ;
        transition: transform 150ms ease-in-out;
        border: 1px solid rgba(0, 153, 255, 0.0);
    }

    header ul a:hover {
        background-color: transparent;
        border: 1px solid rgba(0, 153, 255, 0.4);
        transform: scale(1.02);
    }   

    @media (prefers-color-scheme: dark) {
        header ul{
            border-bottom: solid 1px rgba(245, 222, 179, 1) ;
        }
        header a {
            color: wheat;
            background-color: rgba(0, 153, 255, 0.2);
        }

        header ul a:hover {
        transform: scale(1.2);
    }
    }

    @media (min-width: 768px) {
        header ul a:hover{
            transform: scale(1.01);
        }
    }
</style>
